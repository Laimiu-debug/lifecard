/**
 * 首页样式
 * Requirements: 4.1, 4.2, 4.3, 4.6
 */

.page-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: env(safe-area-inset-bottom);
}

/* 顶部导航 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 32rpx;
  background-color: #ffffff;
  position: sticky;
  top: 0;
  z-index: 100;
}

.header-left .logo {
  font-size: 40rpx;
  font-weight: bold;
  color: #1890ff;
}

.header-right {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.icon-btn {
  position: relative;
  width: 64rpx;
  height: 64rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.notification-btn {
  margin-left: 8rpx;
}

/* Tab 切换 */
.tabs {
  display: flex;
  background-color: #ffffff;
  padding: 0 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.tab-item {
  padding: 24rpx 32rpx;
  font-size: 30rpx;
  color: #666666;
  position: relative;
  transition: color 0.2s ease;
}

.tab-item.active {
  color: #1890ff;
  font-weight: 500;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 48rpx;
  height: 6rpx;
  background-color: #1890ff;
  border-radius: 3rpx;
}

/* 热门时间范围筛选 */
.time-filter {
  display: flex;
  justify-content: center;
  gap: 32rpx;
  padding: 20rpx 32rpx;
  background-color: #ffffff;
  border-bottom: 1rpx solid #f0f0f0;
}

.time-filter-item {
  padding: 12rpx 32rpx;
  font-size: 26rpx;
  color: #666666;
  background-color: #f5f5f5;
  border-radius: 32rpx;
  transition: all 0.2s ease;
}

.time-filter-item.active {
  color: #ffffff;
  background-color: #1890ff;
}

/* 随机换一批按钮 */
.random-refresh {
  display: flex;
  justify-content: center;
  padding: 20rpx 32rpx;
  background-color: #ffffff;
  border-bottom: 1rpx solid #f0f0f0;
}

/* 卡片列表 */
.card-list {
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

/* 上拉加载更多状态 - 无限滚动 */
/* Requirements: 4.2 */
.loading-more {
  padding: 32rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 初始加载状态 */
.initial-loading {
  padding: 96rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 空状态 */
.empty {
  padding: 96rpx 48rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 没有更多数据提示 */
/* Requirements: 4.2 - 分页结束 */
.no-more {
  padding: 32rpx;
}

/* 上拉加载提示 */
.load-more-hint {
  padding: 24rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.load-more-hint .hint-text {
  font-size: 24rpx;
  color: #999999;
}

/* 文本省略 */
.text-ellipsis {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.text-ellipsis-2 {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}
