/**
 * Life Card 全局样式
 */

/* 重置样式 */
page {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
  font-size: 28rpx;
  line-height: 1.5;
  color: #333333;
  background-color: #f5f5f5;
  box-sizing: border-box;
}

/* 通用容器 */
.container {
  padding: 24rpx;
}

/* Flex 布局工具类 */
.flex {
  display: flex;
}

.flex-row {
  display: flex;
  flex-direction: row;
}

.flex-col {
  display: flex;
  flex-direction: column;
}

.flex-center {
  display: flex;
  justify-content: center;
  align-items: center;
}

.flex-between {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.flex-wrap {
  flex-wrap: wrap;
}

.flex-1 {
  flex: 1;
}

/* 文本工具类 */
.text-center {
  text-align: center;
}

.text-left {
  text-align: left;
}

.text-right {
  text-align: right;
}

.text-ellipsis {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.text-ellipsis-2 {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

/* 字体大小 */
.text-xs {
  font-size: 22rpx;
}

.text-sm {
  font-size: 24rpx;
}

.text-base {
  font-size: 28rpx;
}

.text-lg {
  font-size: 32rpx;
}

.text-xl {
  font-size: 36rpx;
}

.text-2xl {
  font-size: 40rpx;
}

/* 字体颜色 */
.text-primary {
  color: #1890ff;
}

.text-secondary {
  color: #666666;
}

.text-muted {
  color: #999999;
}

.text-success {
  color: #52c41a;
}

.text-warning {
  color: #faad14;
}

.text-danger {
  color: #ff4d4f;
}

/* 间距工具类 */
.mt-8 {
  margin-top: 16rpx;
}

.mt-16 {
  margin-top: 32rpx;
}

.mt-24 {
  margin-top: 48rpx;
}

.mb-8 {
  margin-bottom: 16rpx;
}

.mb-16 {
  margin-bottom: 32rpx;
}

.mb-24 {
  margin-bottom: 48rpx;
}

.p-8 {
  padding: 16rpx;
}

.p-16 {
  padding: 32rpx;
}

.p-24 {
  padding: 48rpx;
}

/* 卡片样式 */
.card {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

/* 按钮样式 */
.btn {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 500;
}

.btn-primary {
  background-color: #1890ff;
  color: #ffffff;
}

.btn-primary:active {
  background-color: #096dd9;
}

.btn-secondary {
  background-color: #f0f0f0;
  color: #333333;
}

.btn-secondary:active {
  background-color: #e0e0e0;
}

.btn-outline {
  background-color: transparent;
  border: 2rpx solid #1890ff;
  color: #1890ff;
}

.btn-outline:active {
  background-color: rgba(24, 144, 255, 0.1);
}

.btn-disabled {
  background-color: #f5f5f5;
  color: #999999;
}

/* 头像样式 */
.avatar {
  border-radius: 50%;
  overflow: hidden;
}

.avatar-sm {
  width: 64rpx;
  height: 64rpx;
}

.avatar-md {
  width: 96rpx;
  height: 96rpx;
}

.avatar-lg {
  width: 128rpx;
  height: 128rpx;
}

/* 标签样式 */
.tag {
  display: inline-flex;
  align-items: center;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  font-size: 22rpx;
  margin-right: 12rpx;
  margin-bottom: 12rpx;
}

.tag-primary {
  background-color: rgba(24, 144, 255, 0.1);
  color: #1890ff;
}

.tag-success {
  background-color: rgba(82, 196, 26, 0.1);
  color: #52c41a;
}

.tag-warning {
  background-color: rgba(250, 173, 20, 0.1);
  color: #faad14;
}

/* 分割线 */
.divider {
  height: 1rpx;
  background-color: #f0f0f0;
  margin: 24rpx 0;
}

/* 加载状态 */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 48rpx;
  color: #999999;
}

/* 空状态 */
.empty {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 96rpx 48rpx;
  color: #999999;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 32rpx;
}

.empty-text {
  font-size: 28rpx;
}

/* 安全区域 */
.safe-area-bottom {
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}
