/**
 * 粉丝/关注列表页面样式
 * Requirements: 9.3, 9.4, 9.5
 */

.page-container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 列表容器 */
.list-container {
  padding: 0 0 20rpx 0;
}

/* 用户列表 */
.user-list {
  background-color: #ffffff;
}

/* 用户项 */
.user-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.user-item:last-child {
  border-bottom: none;
}

/* 用户信息区域 */
.user-info {
  display: flex;
  align-items: center;
  flex: 1;
  min-width: 0;
}

/* 用户头像 */
.user-avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  background-color: #f0f0f0;
  flex-shrink: 0;
}

/* 用户详情 */
.user-detail {
  flex: 1;
  min-width: 0;
  margin-left: 24rpx;
  margin-right: 24rpx;
}

/* 用户名行 */
.user-name-row {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

/* 用户名 */
.user-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  max-width: 280rpx;
}

/* 互关标识 - Requirements: 9.5 */
.mutual-badge {
  font-size: 20rpx;
  color: #1890ff;
  background-color: rgba(24, 144, 255, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  margin-left: 12rpx;
  flex-shrink: 0;
}

/* 用户简介 */
.user-bio {
  font-size: 26rpx;
  color: #666666;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  display: block;
  margin-bottom: 4rpx;
}

.user-bio.placeholder {
  color: #999999;
}

/* 卡片数量 */
.user-card-count {
  font-size: 24rpx;
  color: #999999;
}

/* 关注按钮 */
.follow-btn {
  min-width: 140rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 26rpx;
  padding: 0 24rpx;
  border-radius: 30rpx;
  background-color: #1890ff;
  color: #ffffff;
  border: none;
  flex-shrink: 0;
}

.follow-btn::after {
  border: none;
}

.follow-btn.following {
  background-color: #f5f5f5;
  color: #666666;
}

.follow-btn[disabled] {
  opacity: 0.6;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 32rpx;
  background-color: #ffffff;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #333333;
  margin-bottom: 12rpx;
}

.empty-hint {
  font-size: 26rpx;
  color: #999999;
}

/* 加载更多 */
.load-more {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 32rpx;
}

/* 没有更多 */
.no-more {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 32rpx;
}

.no-more-text {
  font-size: 26rpx;
  color: #999999;
}
