/**
 * 标签选择器组件样式
 * Requirements: 3.6
 */

.tag-selector {
  padding: 24rpx;
}

.tag-selector--disabled {
  opacity: 0.6;
  pointer-events: none;
}

/* 标签区域标题 */
.tag-selector__label {
  font-size: 26rpx;
  color: #666666;
  margin-bottom: 16rpx;
  display: block;
}

/* 已选标签区域 */
.tag-selector__selected {
  margin-bottom: 32rpx;
}

.tag-selector__selected-header {
  margin-bottom: 16rpx;
}

.tag-selector__selected-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.tag-selector__selected-item {
  display: inline-flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 20rpx;
  background-color: rgba(24, 144, 255, 0.1);
  border: 2rpx solid #1890ff;
  border-radius: 32rpx;
  font-size: 26rpx;
  color: #1890ff;
}

.tag-selector__selected-text {
  max-width: 200rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 可选标签区域 */
.tag-selector__options {
  margin-bottom: 24rpx;
}

.tag-selector__options-header {
  margin-bottom: 16rpx;
}

.tag-selector__options-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.tag-selector__option {
  display: inline-flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 24rpx;
  background-color: #f5f5f5;
  border: 2rpx solid transparent;
  border-radius: 32rpx;
  font-size: 26rpx;
  color: #333333;
  transition: all 0.2s ease;
}

.tag-selector__option:active {
  background-color: #e8e8e8;
}

.tag-selector__option--selected {
  background-color: rgba(24, 144, 255, 0.1);
  border-color: #1890ff;
  color: #1890ff;
}

.tag-selector__option--add {
  background-color: #ffffff;
  border: 2rpx dashed #d9d9d9;
  color: #999999;
}

.tag-selector__option--add:active {
  border-color: #1890ff;
  color: #1890ff;
}

/* 自定义标签输入 */
.tag-selector__custom {
  margin-top: 24rpx;
  padding: 24rpx;
  background-color: #f9f9f9;
  border-radius: 16rpx;
}

.tag-selector__custom-input {
  width: 100%;
  height: 72rpx;
  padding: 0 24rpx;
  background-color: #ffffff;
  border: 2rpx solid #e8e8e8;
  border-radius: 8rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.tag-selector__custom-input:focus {
  border-color: #1890ff;
}

.tag-selector__custom-actions {
  display: flex;
  justify-content: flex-end;
  gap: 24rpx;
  margin-top: 20rpx;
}

.tag-selector__custom-btn {
  padding: 12rpx 32rpx;
  border-radius: 8rpx;
  font-size: 26rpx;
}

.tag-selector__custom-btn--cancel {
  background-color: #f0f0f0;
  color: #666666;
}

.tag-selector__custom-btn--confirm {
  background-color: #1890ff;
  color: #ffffff;
}

/* 提示信息 */
.tag-selector__tip {
  margin-top: 16rpx;
  font-size: 24rpx;
  text-align: center;
}
