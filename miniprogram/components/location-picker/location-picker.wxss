/**
 * 位置选择器组件样式
 * Requirements: 3.5
 */

.location-picker {
  padding: 24rpx;
}

.location-picker--disabled {
  opacity: 0.6;
  pointer-events: none;
}

/* 已选位置 */
.location-picker__selected {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background-color: #f5f7fa;
  border-radius: 12rpx;
  transition: background-color 0.2s ease;
}

.location-picker__selected:active {
  background-color: #e8eaed;
}

/* 图标 */
.location-picker__icon {
  flex-shrink: 0;
  width: 48rpx;
  height: 48rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 20rpx;
}

/* 位置信息 */
.location-picker__info {
  flex: 1;
  min-width: 0;
  display: flex;
  flex-direction: column;
}

.location-picker__name {
  font-size: 28rpx;
  color: #333333;
  line-height: 1.4;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.location-picker__coords {
  margin-top: 4rpx;
  font-size: 24rpx;
  color: #999999;
  line-height: 1.4;
}

/* 清除按钮 */
.location-picker__clear {
  flex-shrink: 0;
  width: 48rpx;
  height: 48rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 16rpx;
}

.location-picker__clear:active {
  opacity: 0.7;
}

/* 占位状态 */
.location-picker__placeholder {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background-color: #fafafa;
  border: 2rpx dashed #d9d9d9;
  border-radius: 12rpx;
  transition: all 0.2s ease;
}

.location-picker__placeholder:active {
  background-color: #f0f0f0;
  border-color: #1890ff;
}

.location-picker__placeholder-text {
  flex: 1;
  font-size: 28rpx;
  color: #999999;
}

/* 加载状态 */
.location-picker__loading {
  flex-shrink: 0;
  margin-left: 16rpx;
}

/* 快捷操作 */
.location-picker__actions {
  margin-top: 16rpx;
}

.location-picker__action {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  background-color: #f0f7ff;
  border-radius: 8rpx;
  transition: background-color 0.2s ease;
}

.location-picker__action:active {
  background-color: #e0efff;
}

.location-picker__action-text {
  flex: 1;
  margin-left: 12rpx;
  font-size: 26rpx;
  color: #1890ff;
}

/* 错误提示 */
.location-picker__error {
  display: flex;
  align-items: center;
  margin-top: 12rpx;
  padding: 12rpx 16rpx;
  background-color: #fff2f0;
  border-radius: 8rpx;
}

.location-picker__error-text {
  margin-left: 8rpx;
  font-size: 24rpx;
  color: #ff4d4f;
}
