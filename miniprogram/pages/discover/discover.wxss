/* pages/discover/discover.wxss */

.page-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 32rpx;
}

.section {
  background-color: #ffffff;
  margin-bottom: 24rpx;
  padding: 24rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
}

.time-range {
  display: flex;
  gap: 16rpx;
}

.range-item {
  font-size: 24rpx;
  color: #999999;
  padding: 8rpx 16rpx;
}

.range-item.active {
  color: #1890ff;
  background-color: rgba(24, 144, 255, 0.1);
  border-radius: 8rpx;
}

.refresh-btn {
  font-size: 26rpx;
  color: #1890ff;
}

/* 热门卡片 */
.hot-list {
  display: flex;
  white-space: nowrap;
}

.hot-card {
  display: inline-block;
  width: 280rpx;
  margin-right: 24rpx;
  border-radius: 12rpx;
  overflow: hidden;
  background-color: #f5f5f5;
}

.hot-image {
  width: 280rpx;
  height: 200rpx;
}

.hot-info {
  padding: 16rpx;
}

.hot-title {
  font-size: 26rpx;
  color: #333333;
  display: block;
  margin-bottom: 8rpx;
}

.hot-stats {
  font-size: 22rpx;
  color: #999999;
}

/* 随机发现 */
.random-list {
  display: flex;
  flex-wrap: wrap;
  gap: 24rpx;
}

.random-card {
  width: calc(50% - 12rpx);
  border-radius: 12rpx;
  overflow: hidden;
  background-color: #f5f5f5;
}

.random-image {
  width: 100%;
  height: 240rpx;
}

.random-info {
  padding: 16rpx;
}

.random-title {
  font-size: 26rpx;
  color: #333333;
}

.loading {
  padding: 48rpx;
  text-align: center;
  color: #999999;
}
