/**
 * 空状态组件样式
 * Requirements: 5.7
 */

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 40rpx;
  text-align: center;
}

/* 图标/图片区域 */
.empty-state__icon-wrapper {
  margin-bottom: 32rpx;
}

.empty-state__image {
  width: 200rpx;
  height: 200rpx;
}

/* 标题 */
.empty-state__title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 16rpx;
  line-height: 1.4;
}

/* 描述文案 */
.empty-state__description {
  font-size: 28rpx;
  color: #999999;
  line-height: 1.5;
  max-width: 480rpx;
}

/* 操作按钮 */
.empty-state__action {
  margin-top: 40rpx;
}
