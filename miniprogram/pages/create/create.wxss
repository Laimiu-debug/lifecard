/**
 * 创建卡片页面样式
 * Requirements: 3.1, 3.2
 */

.page-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 200rpx;
}

/* 区块样式 */
.section {
  background-color: #ffffff;
  padding: 32rpx;
  margin-bottom: 24rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 24rpx;
}

.section-title {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
}

.section-title .title-text {
  margin-left: 12rpx;
}

.section-title .emoji-icon {
  font-size: 32rpx;
}

.required {
  color: #ff4d4f;
  margin-left: 4rpx;
}

.section-hint {
  font-size: 24rpx;
  color: #999999;
}

/* 卡片类型选择 */
.type-grid {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.type-item {
  display: flex;
  align-items: center;
  padding: 28rpx 24rpx;
  background-color: #f8f9fa;
  border-radius: 16rpx;
  border: 4rpx solid transparent;
  transition: all 0.2s ease;
}

.type-item.active {
  background-color: rgba(24, 144, 255, 0.08);
  border-color: #1890ff;
}

.type-icon-wrapper {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #ffffff;
  border-radius: 16rpx;
  margin-right: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.type-icon {
  font-size: 40rpx;
}

.type-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.type-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 4rpx;
}

.type-desc {
  font-size: 24rpx;
  color: #999999;
}

.type-check {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 输入框样式 */
.input-wrapper {
  background-color: #f8f9fa;
  border-radius: 12rpx;
  padding: 0 24rpx;
  border: 2rpx solid transparent;
  transition: border-color 0.2s ease;
}

.input-wrapper.has-error {
  border-color: #ff4d4f;
  background-color: #fff2f0;
}

.input {
  width: 100%;
  height: 96rpx;
  font-size: 30rpx;
  color: #333333;
}

.input-placeholder {
  color: #bfbfbf;
}

.input-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 16rpx;
}

.char-count {
  font-size: 24rpx;
  color: #999999;
  margin-left: auto;
}

.char-count.warning {
  color: #faad14;
}

/* 文本域样式 */
.textarea-wrapper {
  background-color: #f8f9fa;
  border-radius: 12rpx;
  padding: 24rpx;
  border: 2rpx solid transparent;
  transition: border-color 0.2s ease;
}

.textarea-wrapper.has-error {
  border-color: #ff4d4f;
  background-color: #fff2f0;
}

.textarea {
  width: 100%;
  min-height: 200rpx;
  font-size: 30rpx;
  color: #333333;
  line-height: 1.6;
}

/* 错误信息 */
.error-message {
  display: flex;
  align-items: center;
  margin-top: 12rpx;
}

.error-text {
  font-size: 24rpx;
  color: #ff4d4f;
  margin-left: 8rpx;
}

/* 隐私选择器 */
.privacy-selector {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  background-color: #f8f9fa;
  border-radius: 12rpx;
}

.privacy-current {
  display: flex;
  flex-direction: column;
}

.privacy-label {
  font-size: 30rpx;
  color: #333333;
  font-weight: 500;
}

.privacy-desc {
  font-size: 24rpx;
  color: #999999;
  margin-top: 4rpx;
}

/* 底部操作区 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 24rpx 32rpx;
  background-color: #ffffff;
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.action-buttons {
  display: flex;
  gap: 24rpx;
}

.reset-btn {
  flex: 1;
  height: 96rpx;
  font-size: 32rpx;
}

.submit-btn {
  flex: 2;
  height: 96rpx;
  font-size: 32rpx;
}

/* 隐私选择弹窗 */
.privacy-popup {
  padding: 32rpx;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}

.popup-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.popup-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333333;
}

.privacy-options {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.privacy-option {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 28rpx 24rpx;
  background-color: #f8f9fa;
  border-radius: 12rpx;
  border: 2rpx solid transparent;
  transition: all 0.2s ease;
}

.privacy-option.active {
  background-color: rgba(24, 144, 255, 0.08);
  border-color: #1890ff;
}

.option-info {
  display: flex;
  flex-direction: column;
}

.option-label {
  font-size: 30rpx;
  color: #333333;
  font-weight: 500;
}

.option-desc {
  font-size: 24rpx;
  color: #999999;
  margin-top: 4rpx;
}
