/* pages/my-cards/my-cards.wxss */
/* 我的卡片页面样式 */
/* Requirements: 8.1 - 实现创建/收藏 Tab 切换 */
/* Requirements: 8.2, 8.3, 8.5 - 文件夹管理 */
/* Requirements: 8.6, 8.7 - 时间线和分类视图 */

.page-container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* Tab 切换 */
.tabs {
  display: flex;
  background-color: #ffffff;
  border-bottom: 1rpx solid #f0f0f0;
  position: sticky;
  top: 0;
  z-index: 100;
}

.tab-item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 28rpx 16rpx;
  font-size: 30rpx;
  color: #666666;
  position: relative;
  transition: color 0.2s;
}

.tab-item.active {
  color: #1890ff;
  font-weight: 500;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 80rpx;
  height: 6rpx;
  background-color: #1890ff;
  border-radius: 3rpx;
}

.tab-text {
  margin-right: 4rpx;
}

.tab-count {
  font-size: 24rpx;
  color: #999999;
}

.tab-item.active .tab-count {
  color: #1890ff;
}

/* 视图模式切换栏 */
/* Requirements: 8.6, 8.7 - 时间线和分类视图 */
.view-mode-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 24rpx;
  background-color: #ffffff;
  border-bottom: 1rpx solid #f0f0f0;
}

.view-mode-left {
  display: flex;
  gap: 8rpx;
}

.view-mode-item {
  display: flex;
  align-items: center;
  padding: 12rpx 20rpx;
  background-color: #f5f5f5;
  border-radius: 24rpx;
  transition: all 0.2s;
}

.view-mode-item.active {
  background-color: #e6f7ff;
  color: #1890ff;
}

.view-mode-item:active {
  transform: scale(0.95);
}

.view-mode-icon {
  font-size: 24rpx;
  margin-right: 6rpx;
}

.view-mode-text {
  font-size: 24rpx;
  color: #666666;
}

.view-mode-item.active .view-mode-text {
  color: #1890ff;
  font-weight: 500;
}

.view-mode-right {
  display: flex;
  align-items: center;
}

.total-count {
  font-size: 24rpx;
  color: #999999;
}

/* 文件夹区域 */
.folder-section {
  background-color: #ffffff;
  padding: 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.folder-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.folder-title {
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
}

.folder-add-btn {
  display: flex;
  align-items: center;
  padding: 8rpx 16rpx;
  background-color: #f5f5f5;
  border-radius: 24rpx;
}

.folder-add-btn:active {
  background-color: #e8e8e8;
}

.add-icon {
  font-size: 28rpx;
  color: #1890ff;
  margin-right: 4rpx;
}

.add-text {
  font-size: 24rpx;
  color: #1890ff;
}

.folder-scroll {
  white-space: nowrap;
}

.folder-item {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx 24rpx;
  margin-right: 16rpx;
  background-color: #f5f5f5;
  border-radius: 12rpx;
  min-width: 120rpx;
  transition: all 0.2s;
}

.folder-item:active {
  transform: scale(0.95);
}

.folder-item.active {
  background-color: #e6f7ff;
  border: 2rpx solid #1890ff;
}

.folder-icon {
  font-size: 40rpx;
  margin-bottom: 8rpx;
}

.folder-name {
  font-size: 24rpx;
  color: #333333;
  max-width: 120rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.folder-count {
  font-size: 20rpx;
  color: #999999;
  margin-left: 4rpx;
}

.folder-empty {
  padding: 24rpx;
  text-align: center;
}

.folder-empty-text {
  font-size: 24rpx;
  color: #999999;
}

/* 卡片滚动区域 */
.card-scroll {
  flex: 1;
  height: calc(100vh - 88rpx - 80rpx);
}

.card-scroll.with-folders {
  height: calc(100vh - 88rpx - 80rpx - 180rpx);
}

.card-scroll.with-view-mode {
  height: calc(100vh - 88rpx - 80rpx);
}

.card-scroll.with-folders.with-view-mode {
  height: calc(100vh - 88rpx - 80rpx - 180rpx);
}

/* 卡片列表 */
.card-list {
  padding: 24rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 24rpx;
}

.card-item {
  width: calc(50% - 12rpx);
  background-color: #ffffff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
  transition: transform 0.2s, box-shadow 0.2s;
}

.card-item:active {
  transform: scale(0.98);
  box-shadow: 0 1rpx 6rpx rgba(0, 0, 0, 0.04);
}

/* 卡片封面 */
.card-cover {
  position: relative;
  width: 100%;
  height: 240rpx;
  background-color: #f0f0f0;
}

.card-image {
  width: 100%;
  height: 100%;
}

.card-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #e8e8e8 0%, #f5f5f5 100%);
}

.placeholder-icon {
  font-size: 64rpx;
  opacity: 0.5;
}

.card-type-tag {
  position: absolute;
  top: 12rpx;
  left: 12rpx;
  padding: 4rpx 12rpx;
  background-color: rgba(0, 0, 0, 0.5);
  color: #ffffff;
  font-size: 20rpx;
  border-radius: 6rpx;
}

/* 卡片信息 */
.card-info {
  padding: 16rpx;
}

.card-title {
  font-size: 26rpx;
  color: #333333;
  font-weight: 500;
  display: block;
  margin-bottom: 8rpx;
  line-height: 1.4;
}

.text-ellipsis {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.card-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.card-date {
  font-size: 22rpx;
  color: #999999;
}

.card-stats {
  display: flex;
  gap: 12rpx;
}

.stat-item {
  font-size: 20rpx;
  color: #999999;
}

/* 加载状态 */
.loading,
.no-more {
  padding: 32rpx;
  text-align: center;
  color: #999999;
  font-size: 26rpx;
}

/* 初始加载 */
.initial-loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 48rpx;
  color: #999999;
  font-size: 28rpx;
}

.loading-spinner {
  width: 48rpx;
  height: 48rpx;
  border: 4rpx solid #f0f0f0;
  border-top-color: #1890ff;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
  margin-bottom: 24rpx;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

/* 空状态 */
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 48rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
}

.empty-title {
  font-size: 32rpx;
  color: #333333;
  font-weight: 500;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #999999;
  text-align: center;
  margin-bottom: 48rpx;
  line-height: 1.6;
}

.empty-btn {
  padding: 20rpx 64rpx;
  background-color: #1890ff;
  color: #ffffff;
  font-size: 28rpx;
  border-radius: 40rpx;
  border: none;
}

.empty-btn::after {
  border: none;
}

/* 弹窗遮罩 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

/* 弹窗内容 */
.modal-content {
  width: 600rpx;
  background-color: #ffffff;
  border-radius: 24rpx;
  overflow: hidden;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 32rpx;
  color: #333333;
  font-weight: 500;
}

.modal-close {
  font-size: 32rpx;
  color: #999999;
  padding: 8rpx;
}

.modal-body {
  padding: 32rpx;
}

.folder-input {
  width: 100%;
  height: 88rpx;
  padding: 0 24rpx;
  border: 2rpx solid #e8e8e8;
  border-radius: 12rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.folder-input.error {
  border-color: #ff4d4f;
}

.folder-input:focus {
  border-color: #1890ff;
}

.input-error {
  display: block;
  margin-top: 12rpx;
  font-size: 24rpx;
  color: #ff4d4f;
}

.input-hint {
  display: block;
  margin-top: 12rpx;
  font-size: 24rpx;
  color: #999999;
}

.modal-footer {
  display: flex;
  border-top: 1rpx solid #f0f0f0;
}

.modal-btn {
  flex: 1;
  height: 96rpx;
  line-height: 96rpx;
  text-align: center;
  font-size: 30rpx;
  border: none;
  border-radius: 0;
  background-color: transparent;
}

.modal-btn::after {
  border: none;
}

.modal-btn.cancel {
  color: #666666;
  border-right: 1rpx solid #f0f0f0;
}

.modal-btn.confirm {
  color: #1890ff;
  font-weight: 500;
}

.modal-btn:active {
  background-color: #f5f5f5;
}

/* 操作菜单遮罩 */
.action-sheet-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: flex-end;
  z-index: 1000;
}

/* 操作菜单 */
.action-sheet {
  width: 100%;
  background-color: #ffffff;
  border-radius: 24rpx 24rpx 0 0;
  padding-bottom: env(safe-area-inset-bottom);
}

.action-sheet-header {
  padding: 32rpx;
  text-align: center;
  border-bottom: 1rpx solid #f0f0f0;
}

.action-sheet-title {
  font-size: 28rpx;
  color: #999999;
}

.action-sheet-item {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.action-sheet-item:active {
  background-color: #f5f5f5;
}

.action-sheet-item.danger .action-text {
  color: #ff4d4f;
}

.action-icon {
  font-size: 36rpx;
  margin-right: 16rpx;
}

.action-text {
  font-size: 30rpx;
  color: #333333;
}

.action-sheet-cancel {
  padding: 32rpx;
  text-align: center;
  font-size: 30rpx;
  color: #666666;
  margin-top: 16rpx;
  background-color: #f5f5f5;
}

.action-sheet-cancel:active {
  background-color: #e8e8e8;
}


/* 移动到文件夹选择面板 */
/* Requirements: 8.4 */
.move-folder-sheet {
  max-height: 70vh;
  overflow-y: auto;
}

.action-sheet-subtitle {
  display: block;
  font-size: 24rpx;
  color: #666666;
  margin-top: 8rpx;
  max-width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.folder-select-item {
  display: flex;
  align-items: center;
  padding: 28rpx 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
  transition: background-color 0.2s;
}

.folder-select-item:active {
  background-color: #f5f5f5;
}

.folder-select-item.create-new {
  color: #1890ff;
}

.folder-select-item.create-new .folder-select-name {
  color: #1890ff;
}

.folder-select-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
  width: 48rpx;
  text-align: center;
}

.folder-select-name {
  flex: 1;
  font-size: 30rpx;
  color: #333333;
}

.folder-select-count {
  font-size: 24rpx;
  color: #999999;
  margin-left: 12rpx;
}

.folder-select-hint {
  font-size: 24rpx;
  color: #999999;
  margin-left: 12rpx;
}

/* 长按提示样式（收藏 Tab 下的卡片） */
.card-item.collected-card {
  position: relative;
}

.card-item.collected-card::after {
  content: '长按移动';
  position: absolute;
  bottom: 8rpx;
  right: 8rpx;
  font-size: 18rpx;
  color: #999999;
  opacity: 0;
  transition: opacity 0.2s;
}

.card-item.collected-card:active::after {
  opacity: 1;
}

/* ==================== 时间线视图样式 ==================== */
/* Requirements: 8.6 - 按日期分组 */

.timeline-view {
  padding: 24rpx;
}

.timeline-group {
  position: relative;
  padding-left: 40rpx;
  margin-bottom: 32rpx;
}

.timeline-group::before {
  content: '';
  position: absolute;
  left: 10rpx;
  top: 40rpx;
  bottom: 0;
  width: 2rpx;
  background-color: #e8e8e8;
}

.timeline-group:last-child::before {
  display: none;
}

.timeline-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  position: relative;
}

.timeline-dot {
  position: absolute;
  left: -34rpx;
  width: 16rpx;
  height: 16rpx;
  background-color: #1890ff;
  border-radius: 50%;
  border: 4rpx solid #e6f7ff;
}

.timeline-date {
  font-size: 30rpx;
  color: #333333;
  font-weight: 500;
}

.timeline-count {
  font-size: 24rpx;
  color: #999999;
  margin-left: 12rpx;
}

.timeline-cards {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.timeline-card-item {
  display: flex;
  background-color: #ffffff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  transition: transform 0.2s;
}

.timeline-card-item:active {
  transform: scale(0.98);
}

.timeline-card-cover {
  width: 160rpx;
  height: 120rpx;
  flex-shrink: 0;
  background-color: #f0f0f0;
}

.timeline-card-image {
  width: 100%;
  height: 100%;
}

.timeline-card-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #e8e8e8 0%, #f5f5f5 100%);
}

.timeline-card-placeholder .placeholder-icon {
  font-size: 40rpx;
  opacity: 0.5;
}

.timeline-card-info {
  flex: 1;
  padding: 16rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.timeline-card-title {
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
  line-height: 1.4;
}

.timeline-card-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.timeline-card-type {
  font-size: 22rpx;
  color: #1890ff;
  background-color: #e6f7ff;
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
}

.timeline-card-stats {
  display: flex;
  gap: 12rpx;
}

.timeline-card-stats .stat-item {
  font-size: 20rpx;
  color: #999999;
}

/* ==================== 分类视图样式 ==================== */
/* Requirements: 8.7 - 按类型分组 */

.category-view {
  padding: 24rpx;
}

.category-group {
  margin-bottom: 32rpx;
}

.category-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  padding: 16rpx 20rpx;
  background-color: #ffffff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.category-icon {
  font-size: 36rpx;
  margin-right: 12rpx;
}

.category-name {
  font-size: 30rpx;
  color: #333333;
  font-weight: 500;
  flex: 1;
}

.category-count {
  font-size: 24rpx;
  color: #999999;
}

.category-cards {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.category-card-item {
  width: calc(50% - 8rpx);
  background-color: #ffffff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  transition: transform 0.2s;
}

.category-card-item:active {
  transform: scale(0.98);
}

.category-card-cover {
  width: 100%;
  height: 180rpx;
  background-color: #f0f0f0;
}

.category-card-image {
  width: 100%;
  height: 100%;
}

.category-card-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #e8e8e8 0%, #f5f5f5 100%);
}

.category-card-placeholder .placeholder-icon {
  font-size: 48rpx;
  opacity: 0.5;
}

.category-card-info {
  padding: 16rpx;
}

.category-card-title {
  font-size: 26rpx;
  color: #333333;
  font-weight: 500;
  line-height: 1.4;
  margin-bottom: 8rpx;
}

.category-card-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.category-card-date {
  font-size: 22rpx;
  color: #999999;
}

.category-card-stats {
  display: flex;
  gap: 8rpx;
}

.category-card-stats .stat-item {
  font-size: 18rpx;
  color: #999999;
}
