/**
 * 交易历史页面样式
 * Requirements: 11.2, 11.3, 11.4, 11.5
 */

.page-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 40rpx;
}

/* ==================== 余额卡片 ==================== */
.balance-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  margin: 24rpx;
  padding: 40rpx;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
}

.balance-header {
  margin-bottom: 16rpx;
}

.balance-label {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

.balance-content {
  display: flex;
  align-items: baseline;
}

.coin-icon {
  font-size: 48rpx;
  margin-right: 12rpx;
}

.balance-amount {
  font-size: 72rpx;
  font-weight: 700;
  color: #ffffff;
  line-height: 1;
}

.balance-unit {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-left: 12rpx;
}

/* ==================== 区块标题 ==================== */
.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 32rpx 16rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
}

.section-count {
  font-size: 26rpx;
  color: #999999;
}

/* ==================== 交易记录列表 ==================== */
.transaction-list {
  background-color: #ffffff;
  margin: 0 24rpx;
  border-radius: 16rpx;
  overflow: hidden;
}

.transaction-item {
  display: flex;
  align-items: center;
  padding: 28rpx 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.transaction-item:last-child {
  border-bottom: none;
}

.transaction-item:active {
  background-color: #f9f9f9;
}

/* ==================== 交易图标 ==================== */
.transaction-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.transaction-icon.earn {
  background-color: #e6f7e6;
}

.transaction-icon.spend {
  background-color: #fff2e8;
}

.transaction-icon text {
  font-size: 36rpx;
}

/* ==================== 交易信息 ==================== */
.transaction-info {
  flex: 1;
  overflow: hidden;
}

.transaction-main {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.transaction-desc {
  font-size: 30rpx;
  color: #333333;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-right: 16rpx;
}

.transaction-amount {
  font-size: 32rpx;
  font-weight: 600;
  flex-shrink: 0;
}

.amount-earn {
  color: #52c41a;
}

.amount-spend {
  color: #ff4d4f;
}

.transaction-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.transaction-type {
  font-size: 24rpx;
  color: #999999;
  padding: 4rpx 12rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
}

.transaction-date {
  font-size: 24rpx;
  color: #999999;
}

/* ==================== 空状态 ==================== */
.empty-container {
  padding: 80rpx 48rpx;
  background-color: #ffffff;
  margin: 0 24rpx;
  border-radius: 16rpx;
}

/* ==================== 加载状态 ==================== */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
}

.loading-spinner {
  width: 64rpx;
  height: 64rpx;
  border: 4rpx solid #f0f0f0;
  border-top-color: #667eea;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

.loading-text {
  font-size: 26rpx;
  color: #999999;
  margin-top: 16rpx;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

/* ==================== 加载更多 ==================== */
.load-more {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 32rpx 0;
}

.loading-indicator {
  display: flex;
  align-items: center;
}

.loading-spinner-small {
  width: 32rpx;
  height: 32rpx;
  border: 3rpx solid #f0f0f0;
  border-top-color: #667eea;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
  margin-right: 12rpx;
}

.no-more-text {
  font-size: 26rpx;
  color: #cccccc;
}
