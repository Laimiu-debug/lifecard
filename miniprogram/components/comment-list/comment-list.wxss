/**
 * 评论列表组件样式
 * Requirements: 6.4
 */

.comment-list {
  display: flex;
  flex-direction: column;
  background-color: #ffffff;
}

/* 输入区域 */
.comment-list__input-area {
  padding: 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.comment-list__input-wrapper {
  display: flex;
  align-items: center;
  background-color: #f5f5f5;
  border-radius: 40rpx;
  padding: 16rpx 24rpx;
  transition: all 0.2s ease;
}

.comment-list__input-wrapper--focus {
  background-color: #ffffff;
  box-shadow: 0 0 0 2rpx #1890ff;
}

.comment-list__input {
  flex: 1;
  font-size: 28rpx;
  color: #333333;
  min-height: 40rpx;
}

.comment-list__placeholder {
  color: #999999;
}

.comment-list__submit {
  display: flex;
  align-items: center;
  justify-content: center;
  min-width: 96rpx;
  height: 56rpx;
  padding: 0 24rpx;
  margin-left: 16rpx;
  background-color: #cccccc;
  border-radius: 28rpx;
  font-size: 26rpx;
  color: #ffffff;
  transition: background-color 0.2s ease;
}

.comment-list__submit--active {
  background-color: #1890ff;
}

.comment-list__char-count {
  text-align: right;
  font-size: 22rpx;
  color: #999999;
  margin-top: 12rpx;
  padding-right: 8rpx;
}

.comment-list__char-count--exceed {
  color: #ff4d4f;
}

.comment-list__error {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-top: 12rpx;
  font-size: 24rpx;
  color: #ff4d4f;
}

/* 列表头部 */
.comment-list__header {
  display: flex;
  align-items: center;
  padding: 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.comment-list__title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
}

.comment-list__count {
  font-size: 28rpx;
  color: #999999;
  margin-left: 8rpx;
}

/* 加载状态 */
.comment-list__loading {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 80rpx 0;
}

/* 评论列表 */
.comment-list__items {
  padding: 0 24rpx;
}

/* 单条评论 */
.comment-item {
  display: flex;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.comment-item:last-child {
  border-bottom: none;
}

.comment-item__avatar {
  flex-shrink: 0;
  margin-right: 20rpx;
}

.comment-item__avatar-img {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  background-color: #f0f0f0;
}

.comment-item__content {
  flex: 1;
  min-width: 0;
  position: relative;
}

.comment-item__header {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.comment-item__nickname {
  font-size: 26rpx;
  font-weight: 500;
  color: #333333;
  margin-right: 16rpx;
}

.comment-item__time {
  font-size: 22rpx;
  color: #999999;
}

.comment-item__text {
  font-size: 28rpx;
  color: #333333;
  line-height: 1.6;
  word-break: break-all;
}

.comment-item__delete {
  position: absolute;
  top: 0;
  right: 0;
  padding: 8rpx;
}

/* 加载更多 */
.comment-list__load-more {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 32rpx 0;
  font-size: 26rpx;
  color: #1890ff;
}

.comment-list__no-more {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 32rpx 0;
  font-size: 24rpx;
  color: #999999;
}

/* 空状态 */
.comment-list__empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
}

.comment-list__empty-text {
  margin-top: 24rpx;
  font-size: 28rpx;
  color: #999999;
}
