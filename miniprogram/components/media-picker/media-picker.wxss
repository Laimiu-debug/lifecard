/**
 * 媒体选择器组件样式
 * Requirements: 3.4
 */

.media-picker {
  padding: 24rpx;
}

.media-picker--disabled {
  opacity: 0.6;
  pointer-events: none;
}

/* 媒体列表 */
.media-picker__list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

/* 媒体项 */
.media-picker__item {
  position: relative;
  width: calc((100% - 32rpx) / 3);
  aspect-ratio: 1;
  border-radius: 12rpx;
  overflow: hidden;
  background-color: #f5f5f5;
}

/* 视频容器 */
.media-picker__video {
  position: relative;
  width: 100%;
  height: 100%;
}

.media-picker__video-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #e8e8e8;
}

/* 视频播放图标 */
.media-picker__video-play {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 80rpx;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: rgba(0, 0, 0, 0.4);
  border-radius: 50%;
}

/* 视频时长 */
.media-picker__video-duration {
  position: absolute;
  bottom: 8rpx;
  right: 8rpx;
  padding: 4rpx 12rpx;
  background-color: rgba(0, 0, 0, 0.6);
  border-radius: 4rpx;
  font-size: 22rpx;
  color: #ffffff;
}

/* 上传进度 */
.media-picker__progress {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: rgba(0, 0, 0, 0.5);
}

.media-picker__progress-text {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #ffffff;
}

/* 上传错误 */
.media-picker__error {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: rgba(0, 0, 0, 0.5);
}

.media-picker__error-text {
  margin-top: 8rpx;
  font-size: 22rpx;
  color: #ff4d4f;
}

/* 已上传标记 */
.media-picker__uploaded {
  position: absolute;
  bottom: 8rpx;
  right: 8rpx;
  width: 40rpx;
  height: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: rgba(255, 255, 255, 0.9);
  border-radius: 50%;
}

/* 删除按钮 */
.media-picker__delete {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 40rpx;
  height: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: rgba(0, 0, 0, 0.5);
  border-radius: 50%;
}

.media-picker__delete:active {
  background-color: rgba(0, 0, 0, 0.7);
}

/* 添加按钮 */
.media-picker__add {
  width: calc((100% - 32rpx) / 3);
  aspect-ratio: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #fafafa;
  border: 2rpx dashed #d9d9d9;
  border-radius: 12rpx;
  transition: all 0.2s ease;
}

.media-picker__add:active {
  background-color: #f0f0f0;
  border-color: #1890ff;
}

.media-picker__add-text {
  margin-top: 12rpx;
  font-size: 24rpx;
  color: #999999;
}

/* 提示信息 */
.media-picker__tips {
  margin-top: 16rpx;
  font-size: 24rpx;
  color: #999999;
  text-align: center;
}
