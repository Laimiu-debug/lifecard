/**
 * 交换管理页面样式
 * Requirements: 7.5, 7.6
 */

.page-container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* ==================== Tab 切换 ==================== */

.tabs {
  display: flex;
  background-color: #ffffff;
  border-bottom: 1rpx solid #f0f0f0;
  position: sticky;
  top: 0;
  z-index: 100;
}

.tab-item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 28rpx 0;
  font-size: 30rpx;
  color: #666666;
  position: relative;
  transition: color 0.3s;
}

.tab-item.active {
  color: #1890ff;
  font-weight: 500;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 80rpx;
  height: 6rpx;
  background-color: #1890ff;
  border-radius: 3rpx;
}

.tab-badge {
  min-width: 36rpx;
  height: 36rpx;
  padding: 0 8rpx;
  margin-left: 8rpx;
  background-color: #ff4d4f;
  color: #ffffff;
  font-size: 22rpx;
  font-weight: 500;
  border-radius: 18rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* ==================== 交换列表 ==================== */

.exchange-list {
  padding: 24rpx;
}

.exchange-item {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

/* ==================== 请求头部 ==================== */

.exchange-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  background-color: #f0f0f0;
}

.user-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.user-name {
  font-size: 30rpx;
  color: #333333;
  font-weight: 500;
  margin-bottom: 4rpx;
}

.request-time {
  font-size: 24rpx;
  color: #999999;
}

.exchange-status {
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  font-weight: 500;
}

.status-pending {
  background-color: rgba(250, 173, 20, 0.1);
  color: #faad14;
}

.status-accepted {
  background-color: rgba(82, 196, 26, 0.1);
  color: #52c41a;
}

.status-rejected {
  background-color: rgba(255, 77, 79, 0.1);
  color: #ff4d4f;
}

.status-cancelled {
  background-color: rgba(153, 153, 153, 0.1);
  color: #999999;
}

.status-expired {
  background-color: rgba(153, 153, 153, 0.1);
  color: #999999;
}

/* ==================== 留言 ==================== */

.exchange-message {
  background-color: #f9f9f9;
  border-radius: 8rpx;
  padding: 16rpx 20rpx;
  margin-bottom: 20rpx;
}

.message-label {
  font-size: 24rpx;
  color: #999999;
}

.message-content {
  font-size: 26rpx;
  color: #666666;
}

/* ==================== 卡片预览 ==================== */

.card-preview {
  display: flex;
  background-color: #f5f5f5;
  border-radius: 12rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
}

.card-image {
  width: 180rpx;
  height: 140rpx;
  flex-shrink: 0;
  background-color: #e0e0e0;
}

.card-info {
  flex: 1;
  padding: 16rpx 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.card-title {
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
  line-height: 1.4;
}

.card-meta {
  margin-top: 8rpx;
}

.card-type {
  font-size: 22rpx;
  color: #999999;
  background-color: #ffffff;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
}

.card-price {
  display: flex;
  align-items: center;
  margin-top: 8rpx;
}

.price-icon {
  font-size: 28rpx;
  margin-right: 4rpx;
}

.price-value {
  font-size: 32rpx;
  color: #faad14;
  font-weight: 600;
}

.price-unit {
  font-size: 24rpx;
  color: #999999;
  margin-left: 4rpx;
}

/* ==================== 操作按钮 ==================== */

.exchange-actions {
  display: flex;
  gap: 24rpx;
  margin-top: 4rpx;
}

.action-btn {
  flex: 1;
  height: 76rpx;
  border-radius: 38rpx;
  font-size: 28rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  padding: 0;
  margin: 0;
}

.action-btn::after {
  border: none;
}

.accept-btn {
  background: linear-gradient(135deg, #52c41a 0%, #73d13d 100%);
  color: #ffffff;
}

.reject-btn {
  background-color: #f5f5f5;
  color: #666666;
}

.cancel-btn {
  background-color: #fff2f0;
  color: #ff4d4f;
}

/* ==================== 状态提示 ==================== */

.status-hint {
  display: flex;
  align-items: center;
  padding: 16rpx 20rpx;
  background-color: rgba(82, 196, 26, 0.1);
  border-radius: 8rpx;
  margin-top: 4rpx;
}

.status-hint.accepted {
  background-color: rgba(82, 196, 26, 0.1);
}

.status-hint.rejected {
  background-color: rgba(255, 77, 79, 0.1);
}

.status-hint.expired {
  background-color: rgba(153, 153, 153, 0.1);
}

.hint-icon {
  font-size: 28rpx;
  margin-right: 12rpx;
}

.hint-text {
  font-size: 24rpx;
  color: #666666;
}

/* ==================== 加载状态 ==================== */

.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
}

.loading-spinner {
  width: 48rpx;
  height: 48rpx;
  border: 4rpx solid #f0f0f0;
  border-top-color: #1890ff;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

.loading-text {
  margin-top: 16rpx;
  font-size: 28rpx;
  color: #999999;
}

/* ==================== 空状态 ==================== */

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 48rpx;
}

.empty-icon {
  font-size: 96rpx;
  margin-bottom: 24rpx;
}

.empty-title {
  font-size: 32rpx;
  color: #333333;
  font-weight: 500;
  margin-bottom: 12rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #999999;
  text-align: center;
}
